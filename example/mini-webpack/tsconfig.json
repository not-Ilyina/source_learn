{
    "compilerOptions": {
      "target": "ES2015",
      "noImplicitAny": false,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "removeComments": false,
      "baseUrl": ".",
      "outDir": "dist",
      "rootDir": "./src",
      "module": "commonjs",
      "sourceMap": true,
      "skipLibCheck": true
    },
    "include": ["./src"]
}